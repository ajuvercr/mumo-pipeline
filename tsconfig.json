{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib/",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "jsonld": [
        "./src/types/jsonld"
      ]
    }
  },
  "allowJs": true,
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": [
    "node_modules/**/*",
    "src/types/**"
  ]
}
